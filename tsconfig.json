{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "types": [
    "node"
  ],
  "include": ["src/**/*"]
}
